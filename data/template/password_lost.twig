<main>
    <div class="container" style="margin-top: 70px;max-width: 500px">
        <form class="form-signin" id="reset-pw-form">
            <h2 class="form-signin-heading">{{ title }}</h2>
            <p>{{ description }}</p>
            <label for="userName" class="sr-only">{{ usernameLabel }}</label>
            <input type="text" id="userName" class="form-control" placeholder="{{ usernamePlaceholder }}" required
                   autofocus>
            <button class="btn btn-lg btn-primary btn-block" id="submit-password-lost" type="submit">
                {{ loginButtonText }}
            </button>
        </form>
    </div>
</main>
