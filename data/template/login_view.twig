<main>
    <div class="container" style="margin-top: 70px;max-width: 500px">
        <form class="form-signin" id="login-form">
            {% if true == expired %}
                <div class="alert alert-warning" role="alert">
                    {{ expiredText }}
                </div>
            {% endif %}
            <h2 class="form-signin-heading">{{ signintitle }}</h2>
            <p>{{ signInDescription }}</p>
            <label for="userName" class="sr-only">{{ usernameLabel }}</label>
            <input type="text" id="userName" class="form-control login-input" placeholder="{{ usernamePlaceholder }}"
                   required
                   autofocus>
            <label for="password" class="sr-only">{{ passwordtitle }}</label>
            <input type="password" id="password" class="form-control login-input "
                   placeholder="{{ passwordPlaceholder }}"
                   required>
            <div class="checkbox">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">{{ loginButtonText }}</button>
        </form>
        <br>
        <p>{{ credentialsText|raw }}</p>
        <p>{{ passwordLostText|raw }}</p>
    </div>
</main>

<div id="dialog" title="" style="display:none;"></div>
