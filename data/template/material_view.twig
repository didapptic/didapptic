<main>
    <div class="container" style="margin-top: 70px; max-width: 900px;" id="material-main-container"
         data-material-file-url="{{ material_file_url }}">
        <h2>{{ headerOne }}</h2>
        {% if canAddNewMaterial == true %}
            <h3>{{ newMaterialHeader }}</h3>
            <p>{{ newMaterialDescription }}</p>
            <p>{{ supportedMimesDesc }}</p>
            <form id="dd__material__new__form" method="post" role="form">
                <div class="border container">
                    <div class="form-group">
                        <h5><label for="dd__date__input" class="control-label">{{ dateInputLabelDescription }}</label>
                        </h5>
                        <input type="text" class="form-control" id="dd__date__input" name="dd__date__input"
                               value="{{ today }}" placeholder="{{ dateInputDescriptionPlaceholder }}">
                        <h5><label for="dd__name__input"
                                   class="control-label">{{ dateInputNameLabelDescription }}</label>
                        </h5>
                        <input type="text" class="form-control" id="dd__name__input" name="dd__name__input"
                               value="" placeholder="{{ dateInputNameDescriptionPlaceholder }}">
                        <h5><label for="dd__password__input"
                                   class="control-label">{{ dateInputPasswordLabelDescription }}</label>
                        </h5>
                        <input type="text" class="form-control" id="dd__password__input" name="dd__password__input"
                               value="" placeholder="{{ dateInputPasswordDescriptionPlaceholder }}">
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                    <div class="form-group">
                        <h5><label for="dd__material__description"
                                   class="control-label">{{ materialDescription }}</label>
                        </h5>
                        <textarea class="form-control" id="dd__material__description" name="dd__material__description"
                                  placeholder="{{ materialDescriptionPlaceholder }}" rows="10"></textarea>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                    <div class="form-group">
                        <h5><label for="dd__material__input__file"
                                   class="control-label">{{ materialUploadFileLabel }}</label>
                        </h5>
                        <input id="dd__material__input__file" name="dd__material__input__file__name[]" type="file"
                               multiple>

                    </div>
                    <div class="form-group"> <!-- Submit Button -->
                        <button type="submit" id="dd__material__submit__button" class="btn btn-primary">
                            {{ submitButtomLabel }}
                        </button>
                    </div>
                </div>
            </form>
        {% endif %}
        <div class="row">
            <div class="col">
                <ul class="list-group">
                    {% for material in materials %}
                        <li class="list-group-item" style="margin-top: 25px; display: flex;
    justify-content: space-between;"><h6>{{ material.name }}</h6>
                            {% if canDeleteMaterial == true %}
                                <i
                                        class="fas fa-times-circle dd__material__delete__button"
                                        data-material-id="{{ material.id }}"
                                        style="cursor: pointer"
                                ></i>
                            {% endif %}
                        </li>
                        <li class="list-group-item" style="margin-bottom: 25px">
                            <ul class="list-group">{{ material.description }}</ul>
                            <ul class="list-group">

                                {% if material.password is not empty %}
                                    <div style="display: flex;  align-content: baseline; justify-content: space-between">
                                        <input type="password"
                                               class="form-control material--password--decrypt" value=""
                                               data-material-id="{{ material.id }}"
                                               placeholder="{{ inputPasswordPlaceholder }}"
                                        >
                                        <div class="spinner-grow" role="status" style="display:none;"></div>
                                    </div>
                                {% endif %}

                            </ul>
                            <ul class="list-group" style="display:none;"></ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</main>
