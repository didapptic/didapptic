<main>
    <div class="container" style="margin-top: 70px;max-width: 500px">
        <form class="form-signin" id="reset-password-form" name="reset-password-form">
            <h2 class="form-signin-heading">{{ title }}</h2>
            <p>{{ description }}</p>
            <label for="password" class="sr-only">{{ passwordLabel }}</label>
            <input type="password" id="password" class="form-control" placeholder="{{ passwordLabelPlaceholder }}"
                   required
                   autofocus>
            <input type="hidden" id="user" class="form-control" value="{{ userId }}">
            <input type="hidden" id="token" class="form-control" value="{{ token.getToken() }}">
            <button class="btn btn-lg btn-primary btn-block" id="submit-reset-password" type="submit">
                {{ resetButtonText }}
            </button>
        </form>
    </div>
</main>
<div id="dialog" title="" style="display:none;"></div>
